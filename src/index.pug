//----------------------------------------------------------------
//- 共通のレイアウトを継承
//----------------------------------------------------------------
extends pug/_common/_layout

//----------------------------------------------------------------
//- ページ毎の変数を追加(メタタグや相対パス、ページ固有データ)
//----------------------------------------------------------------
append variables
  //- 相対パス
  - var relativePath = "./";
  //- ページ固有データ
  - var pageData = data.index;

//----------------------------------------------------------------
//- ページ毎のcssを追加
//----------------------------------------------------------------
//- append css
  link(rel="stylesheet" href=`${relativePath}css/***.css`)

//----------------------------------------------------------------
//- ページ毎のjsを追加
//----------------------------------------------------------------
//- append js
  script(src=`${relativePath}js/script.js` charset="utf-8")

//----------------------------------------------------------------
//- mainコンテンツを記述
//----------------------------------------------------------------
block content
  main
    ul.list
      - for (var i = 0; i < 1; i++)
        li.list__item
          a(href=`0${i + 1}`).list__ttl
            | 0#{i + 1}

